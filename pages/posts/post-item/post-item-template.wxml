<template name="postItem">
<view class = "post-container">
    <view class = "post-author-date">
    <image src="{{avatar}}" class = "post-author"></image>
    <text class = "post-date"></text>{{date}}</view>
    <view>
    <text class = "post-title">{{title}}</text>
    <image src="{{imgSrc}}" class = "post-image"></image>
    <text class = "content" class = "post-content">{{content}}</text></view>
    <view class = "post-like">
    <image src="/image/icon/star.png" class = "post-like-image"></image>
    <text class = "post-like-font">{{reading}}</text>
    <image src="/image/icon/view.png" class = "post-view-image"></image>
    <text class = "post-view-font">{{collection}}</text></view>
</view>
</template>